<!DOCTYPE html>
<html lang="fr" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-dark bg-white">
        <span>Bagels</span>
        <a class="navbar-brand" href="/"
          ><button type="button" class="btn btn-primary">Retour</button></a
        >
      </nav>
    </div>

    <div class="card-group">
      <% for(var i=0; Bagels.length>i; i++){ %>
      <div class="card">
        <img class="card-img-top" src="images/<%=Bagels[i].images%>.jpg" />
        <div class="card-body">
          <h5 class="card-title"><%=Bagels[i].title%></h5>
          <p class="card-text t"><%=Bagels[i].description%></p>
        </div>
      </div>
      <% } %>
    </div>
  </body>
</html>
